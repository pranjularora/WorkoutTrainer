<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kuberkohli.fitness10.View.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sound"
        android:textStyle="bold"
        android:textColor="@color/com_facebook_blue"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:text="Sound :"/>

    <Button
        android:id="@+id/Mute"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/quantum_ic_volume_off_grey600_36"
        android:layout_alignBaseline="@+id/sound"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/unMute"
        android:layout_alignBaseline="@+id/sound"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/quantum_ic_volume_up_grey600_36"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        />

</RelativeLayout>
